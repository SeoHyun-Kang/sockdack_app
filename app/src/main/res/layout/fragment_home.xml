<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".Home"
    android:id="@id/home">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/button1"
        android:layout_width="400dp"
        android:layout_height="210dp"
        android:layout_marginLeft = "10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="#ECD2D2"
        android:drawableTop="@drawable/checklist"
        android:gravity="center"
        android:paddingTop="100px"
        android:text="오늘의 책 추천받기"
        android:textAlignment="center"
        android:textColor="#3A3636"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/button2"
        android:layout_width="400dp"
        android:layout_height="210dp"
        android:layout_below="@id/button1"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="#C8A1A1"
        android:drawableTop="@drawable/recommendation"
        android:gravity="center"
        android:paddingTop="100px"
        android:text="맞춤 책 추천리스트"
        android:textAlignment="center"
        android:textColor="#3A3636"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/button3"
        android:layout_width="190dp"
        android:layout_height="210dp"
        android:layout_below="@id/button2"
        android:layout_margin="10dp"
        android:layout_toLeftOf ="@id/button4"
        android:backgroundTint="#CD7F7F"
        android:gravity="start"
        android:text="최근읽은책"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#3A3636"
        android:textSize="25dp"
        tools:ignore="RtlCompat"
        android:drawableTop="@drawable/recently_read"
        android:paddingTop="100px"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="190dp"
        android:layout_height="210dp"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button2"
        android:backgroundTint="#A36262"
        android:gravity="start"
        android:text="내 서재"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#3A3636"
        android:textSize="25dp"
        tools:ignore="RtlCompat"
        android:drawableTop="@drawable/mylibrary"
        android:paddingTop="100px"/>






</RelativeLayout>